{
  "name": "joule-extension",
  "version": "0.5.2",
  "description": "Lightning charge your browser by connecting your lightning node",
  "homepage": "https://lightningjoule.com",
  "bugs": "https://github.com/joule-labs/joule-extension/issues",
  "repository": "github:joule-labs/joule-extension",
  "license": "MIT",
  "author": {
    "name": "William O'Beirne",
    "url": "https://twitter.com/wbobeirne"
  },
  "keywords": [
    "typescript",
    "react",
    "chrome-extension",
    "lightning",
    "bitcoin",
    "decred",
    "groestlcoin",
    "litecoin"
  ],
  "scripts": {
    "dev": "rimraf dist-dev && cross-env NODE_ENV=development webpack -w",
    "hot": "rimraf dist-dev && cross-env NODE_ENV=development node src/util/hotserver.js",
    "build": "npm run build:prod",
    "build:dev": "rimraf dist-dev && cross-env NODE_ENV=development webpack",
    "build:prod": "rimraf dist-prod && cross-env NODE_ENV=production webpack",
    "clean": "rimraf ./dist-dev && rimraf ./dist-prod",
    "lint": "tslint -p tsconfig.json",
    "tsc": "tsc --noEmit",
    "prettier:base": "prettier --parser typescript 'src/**/*.{ts,tsx}'",
    "prettier:check": "npm run prettier:base -- --check",
    "prettier:write": "npm run prettier:base -- --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "contributors": [
    {
      "name": "Michael Rodriguez",
      "email": "michael@zulurepublic.io"
    }
  ],
