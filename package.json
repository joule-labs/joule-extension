{
  "name": "joule-extension",
  "version": "0.5.2",
  "description": "Lightning charge your browser by connecting your lightning node",
  "homepage": "https://lightningjoule.com",
  "bugs": "https://github.com/joule-labs/joule-extension/issues",
  "repository": "github:joule-labs/joule-extension",
  "license": "MIT",
  "author": {
    "name": "William O'Beirne",
    "url": "https://twitter.com/wbobeirne"
  },
  "keywords": [
    "typescript",
    "react",
    "chrome-extension",
    "lightning",
    "bitcoin",
    "decred",
    "groestlcoin",
    "litecoin"
  ],
  "scripts": {
    "dev": "rimraf dist-dev && cross-env NODE_ENV=development webpack -w",
    "hot": "rimraf dist-dev && cross-env NODE_ENV=development node src/util/hotserver.js",
    "build": "npm run build:prod",
    "build:dev": "rimraf dist-dev && cross-env NODE_ENV=development webpack",
    "build:prod": "rimraf dist-prod && cross-env NODE_ENV=production webpack",
    "build:docker": "rimraf dist-docker && docker build -t joule-build . && docker run --rm -v \"$(pwd)/dist-docker:/out\" joule-build sh -c \"cp /app/dist-prod/joule*.zip /out && cp /app/sha256.txt /out\"",
    "clean": "rimraf ./dist-dev && rimraf ./dist-prod",
    "lint": "tslint -p tsconfig.json",
    "tsc": "tsc --noEmit",
    "prettier:base": "prettier --parser typescript 'src/**/*.{ts,tsx}'",
    "prettier:check": "npm run prettier:base -- --check",
    "prettier:write": "npm run prettier:base -- --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "contributors": [
    {
      "name": "Michael Rodriguez",
      "email": "michael@zulurepublic.io"
    }
  ],
  "dependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-react-constant-elements": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@svgr/webpack": "^6.1.2",
    "antd": "^3.26.12",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "bn.js": "^5.1.3",
    "buffer": "^6.0.3",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^6.3.2",
    "core-js": "^3.6.5",
    "crypto-js": "^4.0.0",
    "css-loader": "^6.5.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jdenticon": "^3.0.1",
    "less": "^3.12.2",
    "less-loader": "^10.2.0",
    "mini-css-extract-plugin": "^1.3.1",
    "moment": "^2.29.1",
    "prettier": "^2.1.2",
    "qrcode.react": "^1.0.0",
    "query-string": "^6.13.7",
    "react": "^17.0.1",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "semver": "^7.3.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.13.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-react": "^5.0.0",
    "typed-redux-saga": "^1.3.1",
    "typescript": "^4.5.4",
    "webln": "0.2.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.2.0",
    "zip-webpack-plugin": "^3.0.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
